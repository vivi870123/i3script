[module/wifi]
	type = internal/network
	interface = wlp4s0
	interval = 3.0
	ping-interval = 0
	accumulate-stats = true

	format-connected-prefix = 
	format-connected-prefix-padding-left = 1
	format-connected-foreground = ${colors.magenta}
	format-connected-background = ${colors.background}
	label-connected = %downspeed%
	label-connected-padding = 1

	format-disconnected-prefix =  睊
	format-disconnected-prefix-padding-left = 1
	format-disconnected-foreground = ${colors.red}
	format-disconnected-background = ${colors.background}
	label-disconnected-padding = 1
	label-disconnected = Offline 

	format-packet-loss = <animation-packetloss> <label-packetloss>
	format-packetloss-prefix-padding-left = 1
	format-packetloss-foreground = ${colors.yellow}
	format-packetloss-background = ${colors.background}
	label-packetloss-padding = 1
	label-packetloss = Packet loss
	animation-packetloss-0 = 
	animation-packetloss-0-foreground = ${colors.red}
	animation-packetloss-1 = 
	animation-packetloss-1-foreground = ${colors.foreground}

[module/time]
	type = internal/date
	interval = 1

	format-prefix = 
	format-prefix-padding-left = 1

	format = <label>
	format-foreground = ${colors.foreground}
	format-background = ${colors.background}

	label = %date%%time%
	label-padding = 1

	time = %H:%M
	time-alt =
	date =
	date-alt = %d/%m/%Y

[module/torrent]
type = custom/script
exec = ~/.local/bin/statusbar/torrent
exec-if = pgrep -x transmission-remote-cli

[module/pacupdate]
	type = custom/script
	exec = ~/.local/bin/statusbar/updates-arch-combined.sh
	interval = 600

	format = <label>
	format-prefix = 
	format-prefix-padding-left = 1
	format-foreground = ${colors.cyan}
	format-background = ${colors.background}

	label = %output%
	label-padding = 1

[module/player-cmus]
	type = custom/script
	exec = ~/.local/bin/statusbar/player-cmus.sh
	exec-if = pgrep -x cmus
	interval = 1
	click-left = cmus-remote --next
	click-right = cmus-remote --prev
	click-middle = cmus-remote --pause
	scroll-up = cmus-remote --volume +5%
	scroll-down = cmus-remote --volume -5%

	label-font = 2
	format = <label>
	format-underline = ${colors.foreground}
	label = %output%
	label-maxlen = 50

[module/udev]
	type = custom/script
	exec = ~/.local/bin/statusbar/udev.sh
	interval = 5
	click-left  = ~/.local/bin/statusbar/udev.sh --mount &
	click-right = ~/.local/bin/statusbar/udev.sh --unmount &


