[global/wm]
	margin-top = 0
	margin-bottom = 0

[settings]
	throttle-output = 5
	throttle-output-for = 10
	throttle-input-for = 30
	screenchange-reload = true

[colors]
foreground = ${xrdb:foreground}
background = ${xrdb:background}
focused = #3B4252
border = #4C566A
border-color = 0

black = ${xrdb:color0}
red = ${xrdb:color1}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}
magenta = ${xrdb:color5}
cyan = ${xrdb:color6}

[bar/base]
; monitor = ${env:MONITOR:eDP1}
; monitor-fallback = ${env:MONITOR:DP1}
	enable-ipc = true
	override-redirect = false
	wm-restack = bspwm
	fixed-center = true

	dpi-x = 0
	dpi-y = 0

	height = 20

	background = ${colors.background}
	foreground = ${colors.foreground}

	border-size = 0
	border-color = ${colors.background}

	line-size = 0
	line-color = ${colors.background}

	padding-left = 0
	padding-right = 0
	padding-bottom = 2
	padding-top = 1

	module-margin-left = 1
	module-margin-right = 1

	font-0 = Hack:size=11:weight=bold;3
	font-1 = Font Awesome 5 Free:size=10:weight=bold;2
	font-2 = Noto Color Emoji:scale=10:style=Regular;2
	font-3 = Symbola:pixelsize=12;3

[bar/top]
inherit = bar/base
bottom = false

offset-x = 1%
width= 100%

tray-position = right
tray-padding = 0

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

modules-left = bspwm xwindow volume backlight mpd torrent
modules-center = i3
modules-right = pacupdate udev wifi battery time

